            <string>scr_inventory_inputs()
if max(keyboard_check_pressed(vk_escape),keyboard_check_pressed(ord("I")),keyboard_check_pressed(vk_tab),0)
{
    obj_game_manager.items_tab_controls = "Inventory";
    instance_destroy();
}

if !(obj_game_manager.items_tab_controls = "Equipment") exit;

//Change Tab
if changetab_right
{
    obj_game_manager.items_tab_controls = "Inventory";
    instance_create(x,y,obj_inventory_abilities);
    with (obj_inventory_items) {instance_destroy();}
    instance_destroy();
}

//User input
if key_right {selection_x++};
if key_left {selection_x--};
if key_down {selection_y++};
if key_up {selection_y--};

//Loops the sides of the grid
if selection_x&lt;0 selection_x=1;
if selection_x&gt;1 selection_x=0;
if selection_y&lt;0 selection_y=1;
if selection_y&gt;1 selection_y=0;

//Item Selection
if select == 1
{
    
    if box[# selection_x , selection_y] &gt; 0
    {
        replaced_item = box[# selection_x, selection_y];
        replaced_item_quantity = quantity[# selection_x, selection_y];
        box[# selection_x, selection_y] = 0;
        quantity[# selection_x, selection_y] = 0;
        
        repeat (replaced_item_quantity)
        {
            inventory_pickup_item(replaced_item);
        }
    }
    current_item = obj_inventory_items.current_item;
    current_item_quantity = obj_inventory_items.current_item_quantity;
    box[# selection_x, selection_y] = current_item;
    quantity[# selection_x, selection_y] = current_item_quantity;
    with obj_inventory_items
    {
        box[# selection_x, selection_y] = item.none;
        quantity[# selection_x, selection_y] = 0;
    }
    obj_game_manager.items_tab_controls = "Inventory";
    selection_x = 0;
    selection_y = 0;
}
